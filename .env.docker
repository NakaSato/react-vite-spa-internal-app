# Development environment variables for Docker
NODE_ENV=development
BUILD_TARGET=development

# API Configuration
VITE_API_BASE_URL=http://localhost:5002/api/v1
VITE_ENABLE_MOCK_API=true

# Development Features
VITE_ENABLE_DEV_TOOLS=true
FORCE_OPTIMIZE=false
ANALYZE=false

# Hot Module Replacement
VITE_HMR_PORT=3001
VITE_HMR_HOST=localhost

# Logging
VITE_LOG_LEVEL=debug

# Feature Flags
VITE_ENABLE_REAL_TIME=true
VITE_ENABLE_PDF_REPORTS=true
VITE_ENABLE_ANALYTICS=true

# Security (Development only - use secure values in production)
VITE_JWT_SECRET=development-secret-key
VITE_SESSION_TIMEOUT=3600000

# Performance
VITE_ENABLE_SOURCE_MAPS=true
VITE_ENABLE_BUNDLE_ANALYZER=false
